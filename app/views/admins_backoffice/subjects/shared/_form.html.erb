
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> <%= action_message%> </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>



<div class="row">

<% if @subject.errors.any? %>
    <% @subject.errors.full_messages.each do |message| %>
        <div class="alert alert-danger alert-dismissable">
            <%= message %>
        </div>
    <% end %>
<% end %>

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dados do Formul√°rio
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [:admins_backoffice, @subject], local: true) do |form| %>
                            <div class="form-group">
                                <%= form.label :description %>
                                <%= form.text_field :description, class:"form-control", :placeholder => "Assunto"  %>
                            </div>

                            <button type="submit" class="btn btn-default">Salvar</button>
                        <% end %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

