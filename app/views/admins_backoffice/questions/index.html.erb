
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
        <%= t('messages.listing', model: @questions.model_name.human(count: @questions.size)) %>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>



<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    <i class="fas fa-question-circle" ></i>
                </th>
                <th>
                    <%= traduzindo_para_humanos(@questions, :description)%>
                </th>
                <th>
                    <%= @questions.model.human_attribute_name(:subject)%>
                </th>
                <th>
                    <!-- ## add question -->
                    <%= link_to new_admins_backoffice_question_path, class:"btn btn-primary btn-circle" do %>  
                        <i class="fas fa-user-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody>
        <% @questions.each do |question| %>
            <tr>
                <td> <%= question.id%> </td>
                <td> <%= question.description.truncate(50)%> </td>
                <td> <%= question.subject.description%> </td>
                <td style="width: 100px">  
                <!-- ## editar -->
                <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %> 
                        <i class="fa fa-edit"></i>
                <% end %>
                <!-- ## deletar -->
                <%= link_to admins_backoffice_question_path(question), method: :delete, 
                        class:"btn btn-danger btn-circle", data: { confirm: t('messages.confirm_with', item: question.description.truncate(15))} do %>
                        <i class="fas fa-eraser"></i>
                <% end %>
                
 
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>

<div class="text-center">
<%= paginate @questions %>
</div>
</div>